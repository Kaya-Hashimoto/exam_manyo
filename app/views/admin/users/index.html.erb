<h1>管理者画面</h1>
<%= link_to 'ユーザー新規作成', new_admin_user_path, class: 'btn btn-light btn-sm' %>
<br>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>投稿数</th>
    </tr>
  </thead>
  <br>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th><%= user.id %></th>
        <th><%= user.name %></th>
        <th><%= user.tasks.count %>件</th>
        <th>
          <%= link_to '詳細', user_path(user) %>
          <%= link_to '編集', edit_admin_user_path(user) %>
          <%= link_to '削除', admin_user_path(user), method: :delete, data:{ confirm: "本当に削除しますか？" } %>
        </th>
          <th><%= user.admin? ? '管理者' : '' %></th>
      </tr>
    <% end %>
  </tbody>
</table>