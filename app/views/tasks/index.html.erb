<h1>タスク一覧</h1>
<%= link_to '新着順', tasks_path(latest: "true") %>｜
<%= link_to '古い順', tasks_path(old: "true") %>
<% number = 0 %>
<% @tasks.each do |task| %>
  <p>
    <h4>タスク<%= number += 1 %></h4>
    タイトル：<%= task.title %>
    <br>
    内容：<%= task.content %>
  </p>
  <p>
    <%= link_to '詳細', task_path(task) %>
    <%= link_to '編集', edit_task_path(task) %>
    <%= link_to '削除', task_path(task), method: :delete, data: { confirm: "削除していいですか？"} %>
  </p>
<% end %>
